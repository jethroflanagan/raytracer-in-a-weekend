{
  "compilerOptions": {
    "module": "es2015",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "baseUrl": "./",
    "downlevelIteration": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ]
}
